{
  "namespace": "knt.org.ticketingProjectSchemas.ticket",
  "type": "record",
  "name": "TicketEnvelope",
  "fields": [
    {
      "name": "orderId",
      "type": "long"
    },
    {
      "name": "ticketEventDate",
      "type": { "type": "long", "logicalType": "timestamp-millis" }
    },
    {
      "name": "eventType",
      "type": {
        "type": "enum",
        "name": "TicketEventType",
        "symbols": [
          "TICKET_RESERVED",
          "TICKET_RAN_OUT",
          "TICKET_ROLL_BACK",
          "TICKET_RESERVE_FAILED"
        ]
      }
    },
    {
      "name": "payload",
      "type": [
        "null",
        {
          "type": "record",
          "name": "TicketReservedPayload",
          "fields": [

            {
              "name": "ticketKind",
              "type": "string"
            },
            {
              "name": "showName",
              "type": "string"
            },
            {
              "name": "quantity",
              "type": "int",
              "default": 1
            }
          ]
        },
        {
          "type": "record",
          "name": "TicketRanOutPayload",
          "fields": [
            {
              "name": "showName",
              "type": "string"
            },
            {
              "name": "ticketKind",
              "type": "string"
            }
          ]
        },
        {
          "type": "record",
          "name": "TicketRollBackPayload",
          "fields": [
            {
              "name": "showName",
              "type": "string"
            },
            {
              "name": "ticketKind",
              "type": "string"
            },
            { "name": "quantity", "type": "int" } 
          ]
        },
        {
          "type": "record",
          "name": "TicketReserveFailedPayload",
          "fields": [
            {
              "name": "failureReason",
              "type": "string"
            },
            {
              "name": "showName",
              "type": "string"
            },
            {
              "name": "ticketKind",
              "type": "string"
            }
          ]
        }
      ],
      "default": null
    }
  ]
}
